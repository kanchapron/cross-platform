<UI>:
    id : scr_manger
    Scr_knowledge:
    Scr_bmi:


<Scr_knowledge>:    #หน้าที่1
    name:"Scr_knowledge"
    BoxLayout:
        orientation:'vertical'
        Image:
            source: "bmi.jpg"
        Button:
            text:'คำนวน'
            size_hint: 0.25,0.10
            pos_hint:{'center_x':0.5,'center_y':0.5}
            on_press:app.root.current = "Scr_bmi"
            font_name : 'tahoma'
            background_normal:'img.jpg'
<Scr_bmi>:          #หน้าที่2
    name:"Scr_bmi"
    BoxLayout:
        orientation:'vertical'
        TextInput:
            id: txt_weight
            hint_text:"input weight"
            readonly: True
        Slider:
            id: slider_weight
            min: 30
            max: 100
            step: 0.5
            set: 40
            on_value: txt_weight.text = str(slider_weight.value)
        TextInput:
            id: txt_height
            hint_text:"input height"
            readonly: True
        Slider:
            id: slider_height
            min: 30
            max: 200
            step: 0.5
            set: 40
            on_value: txt_height.text = str(slider_height.value)
        Button:
            id: btn_bmi
            on_press: root.cal_bmi()    #ผูกฟังก์ชั่น cal_bmi ไม่ส่งค่าใดๆ
            background_color:[1,0,0,1]
        Label:
            id: lbl_bmi
            text: "bmi ="   
        Image:
            id: img_bmi